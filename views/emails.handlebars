<h1>Email Addresses:</h1>
<br>
<table class="table table-striped table-hover">
  <thead>
    <tr class="table-success">
      <th scope="col">Email ID</th>
      <th scope="col">Customr ID</th>
      <th scope="col">Email Address</th>
      <th scope="col">Is Primary</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>

    <tr>
      {{#each data_rows}}
        <td>{{this.email_id}}</td>
        <td>{{this.customer_id}}</td>
        <td>{{this.email_address}}</td>
        <td>{{this.is_primary}}</td>
        <td>
          <form method="post">
            <input type='hidden' name='address_id' value = {{this.email_id}}>
            <input type = 'submit' name = 'DeleteRow' value='DeleteRow'>
          </form>
        </td>
    </tr>
      {{/each}}
    <form method="post">
      <tr>
        <td></td>
        {{#each column_list}}
        <td><input type="text" name={{this.Field}} id={{this.Field}}></td>
        {{/each}}
        <td><input type = 'submit' name = 'AddRow' value='AddRow'></td>
      </tr>
    </form>
  </tbody>
