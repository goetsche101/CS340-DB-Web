<!doctype html>
<html>
	<head>
		<title>Grasshoppers Second Hand Products</title>
		<link href="/bootstrap.min.css" rel="stylesheet">
		<link href="/bootstrap-icons.css" rel="stylesheet">
		<script src="/bootstrap.bundle.min.js" ></script>
	</head>
	<body>
		<nav class="navbar navbar-dark bg-dark navbar-expand">
			<div class="container-fluid">
				<span class="navbar-brand">Grasshoppers</span>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>
				{{#if this.loggedInCustomer}}
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link" aria-current="page" href="/customers">Customers</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" aria-current="page" href="/products">Products</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" aria-current="page" href="/categories">Categories</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/payment_methods">Payment Methods</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/addresses">Addresses</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/emails">Emails</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/orders">Orders</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/cart" tabindex="-1">
									<i class="bi bi-cart">&nbsp;</i>Cart ({{this.cartInfo.itemCount}}) Items
								</a>
							</li>
							{{!-- <li class="nav-item">
								<a class="nav-link" href="/logout">Log Out</a>
							</li> --}}
						</ul>
					</div>
				{{/if}}
				<form action="/products" class="d-flex">
					<input class="form-control me-2" type="search" placeholder="Search Products" name="search">
					<button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
				</form>
			</div>
		</nav>
  		{{#if this.errorMessage}}
			<div class="alert alert-danger" role="alert">
				{{this.errorMessage}}
			</div>
		{{/if}}
		{{{body}}}
	</body>
</html>
